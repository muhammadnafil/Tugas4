<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context="DetailActivity">

    //Membuat TextView nama klub sepakbola

    <TextView
        android:id="@+id/tvNama"
        style="@style/TextAppearance.AppCompat.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginBottom="10dp"
        android:text="Nama"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="bold" />

    //Menampilkan logo klub

    <ImageView
        android:id="@+id/img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/tvNama"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="35dp"
        android:src="@mipmap/ic_launcher" />

    //Membuat TextView julukan klub

    <TextView
        android:id="@+id/tvJulukan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img"
        android:layout_marginBottom="10dp"
        android:text="Julukan"
        android:textColor="@color/black"
        android:textSize="18sp" />

    //Membuat TextView daerah asal klub

    <TextView
        android:id="@+id/tvDaerah"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvJulukan"
        android:layout_marginBottom="10dp"
        android:text="Majalengka"
        android:textColor="@color/black"
        android:textSize="18sp" />

    //Membuat TextView tanggal berdirinya klub

    <TextView
        android:id="@+id/tvTanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvJulukan"
        android:layout_toRightOf="@+id/tvSeparator"
        android:text="2 September 2021"
        android:textColor="@color/black"
        android:textSize="18sp" />

    //Membuat TextView separator sebagai pembatas antara daerah asal dengan tanggal berdiri

    <TextView
        android:id="@+id/tvSeparator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvJulukan"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/tvDaerah"
        android:text="|"
        android:textColor="@color/black"
        android:textSize="20sp" />

    //Membuat TextView deskrisi klub

    <TextView
        android:id="@+id/tvDeskripsi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvDaerah"
        android:text="Deskripsi"
        android:textColor="@color/black"
        android:textSize="18sp" />
</RelativeLayout>